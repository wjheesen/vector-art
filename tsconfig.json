{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "target": "es5",
    "lib": ["es2016", "dom"]
  },
  "include": [
    "./*",
    "./src/ts/**/*"
  ]
}
